

/*公用部分定义的类*/
.data-width{
	width:1180px;
	margin:0 auto;
}
.fl{
	float:left;
}
.fr{
	float:right;
}
.center{
	text-align: center;
}
.centerl{
	vertical-align: middle;
}

/*字体大小及颜色定义公用的类*/
.f20c28,.f20cf3,.f20c57{
	font-size:20px;
}
.f16c28,.f16cf3,.f16c57{
	font-size:16px;
}
.f14c28,.f14cf3,.f14c57,.f14c84{
	font-size:14px;
}
.f12c28,.f12cf3,.f12c57,.f12c84{
	font-size:12px;
}
.f20c28,.f16c28,..f14c28,.f12c28{
	color:#282828;
}
.f20cf3,.f12cf3,.f16cf3,.f14cf3{
	color:#F2021d;
}
.f20c57,.f16c57,.f14c57,.f12c57{
	color:#575757;
}
.f14c84,.f12c84{
	color:#848484;
}
.fix:after{
	height:0;
	clear: both;
	content:'';
	display: block;
}
.fix{
	*zoom:1;
}

/*公用部分定义的类结束*/






/*公用部分list*/

/*居中部分title*/
.com-center-title{
	margin-bottom:20px;
	height:30px;
	width:100%;
	background: url(../img/biaotixian.png) no-repeat center;
	text-align: center;
}
.com-center-title h3{
	font-size:20px;
	display:inline-block;
	text-align: center;
}
.com-center-title .one{
	color:#c10f10;
}
/*居中部分结束*/


/*列表部分*/
.com-main ul {
	float:left;
}
.com-list{
	box-sizing: border-box;
	margin-left:20px;
	float:left;
	width:220px;
	height:340px;
	border:1px solid #F6F6F6;	
	background: #fff;
}
.com-main ul li:first-child{
	margin-left:0;
}
.com-list a{
	width:100%;
	height:220px;
	display:block;
}
.com-list a img{
	width:100%;
}
.com-list:hover{	
	border:1px solid #F3001D;
}
.com-list-txt{
    margin: 18px -10px 10px 10px;
	width:200px;
}
.com-list-txt h4{
	color:#282828;  
	margin-bottom:2px; 	
}
.com-list-txt h2{
	font-size:20px;
	color:#F3001D;
}

.com-list-txt .weilaibi{
	font-size:14px;
	color:#848484;
	margin-left:10px;
}
.com-list-txt p{
	color:#848484;	
}
.com-list-txt .t{
	color:#575757;
	font-size:12px;
}
.com-list-m {
	margin-top:16px;	
}
.com-list-m span{
	font-size:14px;
	color:#f3001d;
}
.com-list-m .com-list-mon{
	font-size:20px;
}

.com-list-btm .item{
	color:#999;
}
.com-list-btm .iteml{
	float:left;
}
.com-list-btm .itemr{
	float:right;
} 
.com-list-btm .itemr span{
	color:#282828;
	margin-left:6px;;
}
.com1-list-btm{
	margin-top:10px;
}
.com1-list-btm .item .f12c84{
	font-size:12px;
	color:#848484;
}
.com1-list-btm .item .iteml .f12c28{
	font-size:12px;
	color:#282828;
}

.com-list2{
	height:320px;
}
.com-list2 .f12cf3{
	font-size:12px;
}
.com-list2 .f20cf3{
	font-size:20px;
}
/*列表部分结束*/
